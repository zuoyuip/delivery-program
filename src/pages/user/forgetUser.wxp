<template>
  <wxc-toast
      icon="{{ $toast.icon }}"
      icon-color="{{ $toast.color }}"
      is-show="{{$toast.show}}"
      text="{{ $toast.text }}"
  ></wxc-toast>
  <view class="space"></view>
  <view class="input-wrap">
    <wxc-input bind:input="userPhoneInput" mode="wrapped" placeholder="输入您的手机号码" right="{{true}}"
               title="帐号"
               type="number" value="{{userPhone}}"></wxc-input>
  </view>


  <wxc-cc>
    <view class="input-wrap">
      <wxc-input bind:input="verificationCodeInput" class="verification" mode="wrapped"
                 placeholder="请输入验证码" type="number" value="{{verificationCode}}"></wxc-input>
    </view>
    <view class="input-wrap">
      <wxc-button bind:click=""
                  btnStyle="font-size: 28rpx;width: 260rpx;color: #ffffff;height: 90rpx;line-height: 90rpx;"
                  size="normal"
                  type="selection" value="发送验证码"></wxc-button>
    </view>
  </wxc-cc>

  <view class="input-wrap">
    <wxc-input bind:input="repeatPasswordInput" mode="wrapped" placeholder="输入您要重新设定的密码"
               right="{{true}}" title="密码" password="true"
               type="number" value="{{repeatPassword}}"></wxc-input>
  </view>

  <view class="input-wrap">
    <wxc-input bind:input="againPasswordInput" mode="wrapped" placeholder="再次输入您要设定的密码"
               right="{{true}}" title="重复密码" password="true"
               type="number" value="{{againPassword}}"></wxc-input>
  </view>
  <view class="forget-space"></view>
  <view class="forget-space"></view>
  <wxc-cc>
    <wxc-button bind:click="changePassword"
                btnStyle="width: 500rpx;border-radius: 26rpx;color: #ffffff;"
                size="large"
                type="selection" value="确认更改密码"></wxc-button>
  </wxc-cc>
  <view class="space"></view>
  <wxc-loadmore
      text="更改后请使用新密码进行登录"></wxc-loadmore>
</template>

<script>
  export default {
    data: {
      userPhone: '',
      verificationCode: '',
      repeatPassword: '',
      againPassword: '',
      $toast: {
        text: '',
        show: false,
        color: '',
        icon: ''
      }
    },
    showToast(text, color, icon) {
      this.setData({
        $toast: {
          text: text,
          color: color,
          icon: icon,
          show: true
        }
      });
      setTimeout(() => {
        this.setData({
          $toast: {
            show: false
          },
          contentCount: 0,
          content: ''
        })
      }, 1500)
    },
    userPhoneInput(e) {
      this.setData({
        userPhone: e.detail.value
      });
    },
    verificationCodeInput(e) {
      this.setData({
        verificationCode: e.detail.value
      });
    },
    repeatPasswordInput(e) {
      this.setData({
        repeatPassword: e.detail.value
      });
    },
    againPasswordInput(e) {
      this.setData({
        againPassword: e.detail.value
      });
    },
    changePassword() {
      if (this.data.repeatPassword.trim() !== this.data.againPassword.trim()) {
        this.showToast('密码设置不一致', '#c70009', 'no');
        return
      }
        wx.request({
          url: 'http://39.107.244.193:8080/delivery/user/forgetUser/',
          method: 'POST',
          data: {
            userPhone: this.data.userPhone.trim(),
            verifyCode: this.data.verificationCode.trim(),
            passWord: this.data.repeatPassword.trim()
          },
          header: {
            'content-type': 'application/x-www-form-urlencoded'
          },
          success: res => {
            if (res.statusCode === 200) {
              this.showToast(res.data.message, '#5ac777', 'yes');
              setTimeout(() => {
                wx.reLaunch({
                  url: '../user/login'
                })
              }, 1000);
              return
            }
            this.showToast(res.data.message, '#c70009', 'no');
          },
          fail: error => {
            this.showToast('请求失败，可能是网络原因', '#c70009', 'no');
          },
          complete: () => {

          }
        });
    },
    onLoad: function (options) {
      // 页面创建时执行

    },
    onShow: function () {
      // 页面出现在前台时执行
    },
    onReady: function () {
      // 页面首次渲染完毕时执行
    },
    onHide: function () {
      // 页面从前台变为后台时执行
    },
    onUnload: function () {
      // 页面销毁时执行
    },
    onPullDownRefresh: function () {
      // 触发下拉刷新时执行
    },
    onReachBottom: function () {
      // 页面触底时执行
    },
    onShareAppMessage: function () {
      // 页面被用户分享时执行
    },
    onPageScroll: function () {
      // 页面滚动时执行
    },
    onResize: function () {
      // 页面尺寸变化时执行
    },
    onTabItemTap(item) {
      // tab 点击时执行

    },
    config: {
      // 导航栏标题文字内容
      navigationBarTitleText: '忘记密码',
      // 是否开启当前页面下拉刷新。
      enablePullDownRefresh: false,
      // 设置为 true 则页面整体不能上下滚动。
      disableScroll: false,
      // 禁止页面右滑手势返回
      disableSwipeBack: false,
      usingComponents: {
        'wxc-input': '@minui/wxc-input',
        'wxc-cc': '@minui/wxc-cc',
        'wxc-button': '@minui/wxc-button',
        'wxc-loadmore': '@minui/wxc-loadmore',
        'wxc-toast': '@minui/wxc-toast'
      }
    }
  }
</script>

